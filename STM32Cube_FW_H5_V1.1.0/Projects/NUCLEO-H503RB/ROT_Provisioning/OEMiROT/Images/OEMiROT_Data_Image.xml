<?xml version="1.0" encoding="UTF-8"?>
<Root xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="SCHVerif.xsd">
<McubootFormat>
	<GlobalParam>
		<Command>sign</Command>
		<Title>Data image generation</Title>
	</GlobalParam>
	<Param>
		<Name>Authentication key</Name>
		<Type>File</Type>
		<Command>-k</Command>
		<Hidden>1</Hidden>
		<Default>../Keys/OEMiRoT_Authentication.pem</Default>
	</Param>
	<Param>
		<Name>Encryption key</Name>
		<Type>File</Type>
		<Command>-E</Command>
		<Hidden>1</Hidden>
		<Default>../Keys/OEMiRoT_Encryption.pem</Default>
	</Param>
	<Param>
		<Name>Endianness</Name>
		<Type>Data</Type>
		<Command>-e</Command>
		<Hidden>1</Hidden>
		<Default>little</Default>
	</Param>
	<Param>
		<Name>Padding</Name>
		<Type>Data</Type>
		<Command>--pad</Command>
		<Hidden>1</Hidden>
		<Default></Default>
	</Param>
	<Param>
		<Name>Data download slot size</Name>
		<Value>0x0</Value>
		<Type>Data</Type>
		<Command>-S</Command>
		<Hidden>1</Hidden>
		<Default>0x2000</Default>
	</Param>
	<Param>
		<Name>Header Size</Name>
		<Type>Data</Type>
		<Command>-H</Command>
		<Hidden>1</Hidden>
		<Default>0x20</Default>
	</Param>
	<Param>
		<Name>Padding Header</Name>
		<Type>Data</Type>
		<Command>--pad-header</Command>
		<Hidden>1</Hidden>
		<Default></Default>
	</Param>
	<Param>
		<Name>Dependency with firmware image</Name>
		<Value>1,1.0.0</Value>
		<Type>Dependency</Type>
		<Command>-d</Command>
		<Enable>0</Enable>
		<Tooltip>To be enabled when a compatibility with a specific firmware image version is required. Firmware image version format is x.y.z</Tooltip>
		<Default>0,1.0.0</Default>
	</Param>
	<Param>
		<Name>Write Option</Name>
		<Type>Data</Type>
		<Command>--overwrite-only</Command>
		<Hidden>1</Hidden>
		<Default></Default>
	</Param>
	<Param>
		<Name>slot Option</Name>
		<Type>Data</Type>
		<Command>--primary-only</Command>
		<Hidden>1</Hidden>
		<Default></Default>
	</Param>
	<Param>
		<Name>Version</Name>
		<Value>1.0.0</Value>
		<Type>Data</Type>
		<Command>-v</Command>
		<Tooltip>Version of the data binary. Format is x.y.z</Tooltip>
		<Default>1.0.0</Default>
	</Param>
	<Param>
		<Name>Security Counter</Name>
		<Value>auto</Value>
		<Type>Data</Type>
		<Command>-s</Command>
		<Hidden>1</Hidden>
		<Default>auto</Default>
	</Param>
	<Param>
		<Name>Align</Name>
		<Type>Data</Type>
		<Command>--align</Command>
		<Hidden>1</Hidden>
		<Default>16</Default>
	</Param>
	<Param>
		<Name>Hex format</Name>
		<Value>0x0</Value>
		<Type>Data</Type>
		<Command>-x</Command>
		<Hidden>1</Hidden>
		<Default>0x801e000</Default>
	</Param>
	<Param>
		<Name>Data binary input file</Name>
		<Value>../Binary/data.bin</Value>
		<Type>File</Type>
		<Tooltip>Select the data binary file to be processed for the image generation</Tooltip>
		<Default>../Binary/data.bin</Default>
	</Param>
	<Output>
		<Name>Image output file</Name>
		<Value>../Binary/data_enc_sign.hex</Value>
		<Default>../Binary/data_enc_sign.hex</Default>
	</Output>
  </McubootFormat>
</Root>